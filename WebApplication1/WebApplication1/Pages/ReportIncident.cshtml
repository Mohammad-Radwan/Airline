@page
@model WebApplication1.ReportIncident

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Incident - Skyline Airways</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="style.css" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">SkyWay Airlines</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="FlightSchedules"> Flight Schedules</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="Routes">Routes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="ReportIncident">Report Incident</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="AircraftStatus">Aircraft Status</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"asp-area="" asp-page="SeatSelection">Seat Selection</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container py-5">
    <h1 class="mb-4">Report an Incident</h1>

    <div class="card">
        <div class="card-body">
            <form class="needs-validation" novalidate>
                <!-- Flight Information -->
                <div class="mb-4">
                    <h4 class="mb-3">Flight Information</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Flight ID</label>
                            <input type="text" class="form-control" required
                                   pattern="[A-Z]{2}[0-9]{3,4}"
                                   placeholder="e.g., SK101">
                            <div class="invalid-feedback">
                                Please enter a valid flight ID (e.g., SK101)
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Incident Location</label>
                            <input type="text" class="form-control" required
                                   placeholder="e.g., Airport name or coordinates">
                            <div class="invalid-feedback">
                                Please specify the incident location
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Incident Details -->
                <div class="mb-4">
                    <h4 class="mb-3">Incident Details</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date and Time</label>
                            <input type="datetime-local" class="form-control" required>
                            <div class="invalid-feedback">
                                Please select the date and time of the incident
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cause of Incident</label>
                            <select class="form-select" required>
                                <option value="">Select cause</option>
                                <option>Technical Malfunction</option>
                                <option>Weather Conditions</option>
                                <option>Human Error</option>
                                <option>Bird Strike</option>
                                <option>Security Breach</option>
                                <option>Other</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select the cause of the incident
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Casualty Information -->
                <div class="mb-4">
                    <h4 class="mb-3">Impact Assessment</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Number of Casualties</label>
                            <input type="number" class="form-control" required min="0"
                                   placeholder="Enter number">
                            <div class="invalid-feedback">
                                Please enter the number of casualties
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Number of Survivors</label>
                            <input type="number" class="form-control" required min="0"
                                   placeholder="Enter number">
                            <div class="invalid-feedback">
                                Please enter the number of survivors
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Penalties -->
                <div class="mb-4">
                    <h4 class="mb-3">Regulatory Information</h4>
                    <div class="mb-3">
                        <label class="form-label">Penalties/Actions Taken</label>
                        <select class="form-select" required>
                            <option value="">Select penalty type</option>
                            <option>Financial Penalty</option>
                            <option>License Suspension</option>
                            <option>Mandatory Training</option>
                            <option>Warning Issued</option>
                            <option>Investigation Pending</option>
                            <option>No Action Required</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select the applicable penalties
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Submit Incident Report</button>
                </div>
            </form>
        </div>
    </div>
</div>

