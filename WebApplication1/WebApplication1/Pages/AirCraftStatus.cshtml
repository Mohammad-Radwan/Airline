@page
@model WebApplication1.Pages.AirCraftStatus
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Status - SkyWay Airways</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="style.css" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">SkyWay Airlines</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="flight_schedules"> Flight Schedules</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="routes">Routes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="report_incident">Report Incident</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="aircraft_status">Aircraft Status</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"asp-controller="Flight_Crew_Member" asp-action="seat_selection">Seat Selection</a>
                </li>
            </ul>
        </div>
    </div>
</nav>



<div class="container py-5">
    <h1 class="mb-4">Flight Status</h1>

    <!-- Flight Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Flight Number</label>
                    <input type="text" class="form-control" placeholder="Enter flight number (e.g., SK101)">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Check Status</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Flight Status Cards -->
    <div class="row g-4">
        <!-- Active Flight -->
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">SK101 - In Progress</h5>
                    <span class="badge bg-light text-success">On Time</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <p class="mb-1"><strong>From:</strong> New York (JFK)</p>
                            <p class="mb-1"><strong>Departure:</strong> 09:00</p>
                            <p class="text-success">Departed on schedule</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-1"><strong>To:</strong> London (LHR)</p>
                            <p class="mb-1"><strong>Arrival:</strong> 21:00</p>
                            <p class="text-success">Expected on time</p>
                        </div>
                    </div>
                    <div class="flight-progress mb-3">
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 65%">
                                65% Complete
                            </div>
                        </div>
                    </div>
                    <div class="flight-conditions">
                        <h6>Flight Conditions</h6>
                        <ul class="list-unstyled">
                            <li class="text-success">✓ Smooth flight conditions</li>
                            <li class="text-success">✓ Clear weather ahead</li>
                            <li class="text-success">✓ All systems operational</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delayed Flight -->
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">SK102 - Delayed</h5>
                    <span class="badge bg-light text-warning">30 min delay</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <p class="mb-1"><strong>From:</strong> London (LHR)</p>
                            <p class="mb-1"><strong>Departure:</strong> 10:30</p>
                            <p class="text-warning">New time: 11:00</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-1"><strong>To:</strong> Paris (CDG)</p>
                            <p class="mb-1"><strong>Arrival:</strong> 11:45</p>
                            <p class="text-warning">New time: 12:15</p>
                        </div>
                    </div>
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">Delay Information</h6>
                        <p class="mb-0">Minor technical inspection required. Crew reports standard maintenance check in progress.</p>
                    </div>
                    <div class="flight-conditions">
                        <h6>Current Status</h6>
                        <ul class="list-unstyled">
                            <li class="text-warning">⚠ Maintenance check in progress</li>
                            <li class="text-success">✓ Weather conditions favorable</li>
                            <li class="text-success">✓ Crew ready</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Weather Advisory -->
        <div class="col-md-6">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Weather Advisory</h5>
                </div>
                <div class="card-body">
                    <div class="weather-alerts">
                        <div class="alert alert-info mb-2">
                            <strong>London (LHR):</strong> Light rain expected, no impact on flights
                        </div>
                        <div class="alert alert-warning mb-2">
                            <strong>Paris (CDG):</strong> Strong winds forecasted for evening flights
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Crew Updates -->
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Crew Updates</h5>
                </div>
                <div class="card-body">
                    <div class="crew-updates">
                        <div class="update-item mb-3">
                            <p class="text-muted mb-1">10:15 - SK101</p>
                            <p class="mb-0">Cabin crew reports smooth flight conditions. All services proceeding as scheduled.</p>
                        </div>
                        <div class="update-item">
                            <p class="text-muted mb-1">10:00 - SK102</p>
                            <p class="mb-0">Technical team completing final checks. Boarding to begin shortly.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h5>Contact Us</h5>
                <p>Email: info@skywayeairlines.com<br>
                    Phone: 1-800-SKY-WAYS</p>
            </div>
            <div class="col-md-4">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">About Us</a></li>
                    <li><a href="#" class="text-white">Terms & Conditions</a></li>
                    <li><a href="#" class="text-white">Privacy Policy</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h5>Follow Us</h5>
                <div class="social-links">
                    <a href="#" class="text-white me-2">Facebook</a>
                    <a href="#" class="text-white me-2">Twitter</a>
                    <a href="#" class="text-white">Instagram</a>
                </div>
            </div>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>