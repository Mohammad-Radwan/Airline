@page
@model Airline.WebApplication1.WebApplication1.Pages.SeeAmenitiesModel
@{ViewData["Title"] = "See Amenities";}


<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="Amenities.css" asp-append-version="true">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/SeeAmenities">
                    <i class="fas fa-plane-departure"></i> Admin Portal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class= "nav-item">
                            <a asp-area="" asp-page="/ScheduleFlights" class="nav-link">Schedule Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/SeeAmenities">Oversee Amenities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/TrackCargo">Track Cargo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/MonitorIncd">Monitor Incidents</a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <a asp-area="" asp-page="/Login">Login</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="hero-section text-center">
        <h1>Flight Amenities Management</h1>
        <p class="lead">Overview of Flight Supplies and Suppliers</p>
    </div>
@* -------------------------------------------------------------------_______________________________ *@
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-box-seam me-2"></i>
                        Suppliers
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Supplier ID</th>
                                    <th>Content</th>
                                </tr>
                            </thead>
                            <tbody>
                            @if(Model.Sliers != null && Model.Sliers.Any()){
                                @for (int i=0;i<Model.Sliers.Count;i++)
                                {
                                    <tr>
                                        <td>@Model.Sliers[i].ID</td>
                                        <td>@Model.Sliers[i].Content</td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-airplane-engines me-2"></i>
                        Flight Supplies
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Flight Route</th>
                                    <th>Departure Time</th>
                                    <th>Supplier</th>
                                    <th>Content</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model.Suplies != null && Model.Suplies.Any())
                                {@for (int i=0;i<Model.Suplies.Count;i++)
                                {
                                    <tr>
                                        <td>@Model.Suplies[i].FlightID</td>
                                        <td>@Model.Suplies[i].DepTime</td>
                                        <td>@Model.Suplies[i].SliersID</td>
                                        <td>@Model.Suplies[i].Content</td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
