@page
@model Airline.Views.Flight_Crew_Member.report_incident

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Report Incident - Skyline Airways</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="style.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">SkyWay Airlines</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="flight_schedules"> Flight Schedules</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="routes">Routes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="report_incident">Report Incident</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="aircraft_status">Aircraft Status</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"asp-controller="Flight_Crew_Member" asp-action="seat_selection">Seat Selection</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4">
  <h1 class="mb-4">Report an Incident</h1>

  <div class="card">
    <div class="card-body">
      <form class="needs-validation" novalidate>
        <div class="mb-3">
          <label class="form-label">Flight Number</label>
          <input type="text" class="form-control" required pattern="SK[0-9]{3,4}">
          <div class="invalid-feedback">
            Please enter a valid flight number (e.g., SK101)
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Date of Incident</label>
          <input type="date" class="form-control" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Incident Type</label>
          <select class="form-select" required>
            <option value="">Select incident type</option>
            <option>Safety Concern</option>
            <option>Service Issue</option>
            <option>Baggage Problem</option>
            <option>Flight Delay</option>
            <option>Other</option>
          </select>
        </div>

       
        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea class="form-control" rows="5" required></textarea>
        </div>
        

        <button type="submit" class="btn btn-primary">Submit Report</button>
      </form>
    </div>
  </div>
</div>

<footer class="bg-dark text-white py-4 mt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h5>Contact Us</h5>
        <p>Email: info@skyline.com<br>Phone: 1-800-SKY-LINE</p>
      </div>
      <div class="col-md-4">
        <h5>Quick Links</h5>
        <ul class="list-unstyled">
          <li><a href="#" class="text-white">About Us</a></li>
          <li><a href="#" class="text-white">Terms & Conditions</a></li>
          <li><a href="#" class="text-white">Privacy Policy</a></li>
        </ul>
      </div>
      <div class="col-md-4">
        <h5>Follow Us</h5>
        <div class="social-links">
          <a href="#" class="text-white me-2">Facebook</a>
          <a href="#" class="text-white me-2">Twitter</a>
          <a href="#" class="text-white">Instagram</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>