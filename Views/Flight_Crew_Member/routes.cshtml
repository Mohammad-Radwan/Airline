@page
@model Airline.Views.Flight_Crew_Member.routes

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Routes & Aircraft - SkyWay Airways</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="style.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">SkyWay Airlines</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="flight_schedules"> Flight Schedules</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="routes">Routes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="report_incident">Report Incident</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Flight_Crew_Member" asp-action="aircraft_status">Aircraft Status</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"asp-controller="Flight_Crew_Member" asp-action="seat_selection">Seat Selection</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="container py-4">
    <h1 class="mb-4">Routes and Aircraft Information</h1>

    <!-- Route Map Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="h5 mb-0">Popular Routes</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Route</th>
                        <th>Distance</th>
                        <th>Duration</th>
                        <th>Frequency</th>
                        <th>Aircraft Type</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>New York (JFK) - London (LHR)</td>
                        <td>5,536 km</td>
                        <td>7h 30m</td>
                        <td>Daily</td>
                        <td>Boeing 787-9</td>
                    </tr>
                    <tr>
                        <td>London (LHR) - Dubai (DXB)</td>
                        <td>5,495 km</td>
                        <td>7h 15m</td>
                        <td>Daily</td>
                        <td>Airbus A350-900</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Aircraft Fleet -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="h5 mb-0">Boeing 787-9 Dreamliner</h3>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li>Passenger Capacity: 290</li>
                        <li>Range: 14,140 km</li>
                        <li>First Class: 24 seats</li>
                        <li>Business Class: 48 seats</li>
                        <li>Economy: 218 seats</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="h5 mb-0">Airbus A350-900</h3>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li>Passenger Capacity: 325</li>
                        <li>Range: 15,000 km</li>
                        <li>First Class: 28 seats</li>
                        <li>Business Class: 56 seats</li>
                        <li>Economy: 241 seats</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h5>Contact Us</h5>
                <p>Email: info@skywayeairlines.com<br>Phone: 1-800-SKY-WAY</p>
            </div>
            <div class="col-md-4">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">About Us</a></li>
                    <li><a href="#" class="text-white">Terms & Conditions</a></li>
                    <li><a href="#" class="text-white">Privacy Policy</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h5>Follow Us</h5>
                <div class="social-links">
                    <a href="#" class="text-white me-2">Facebook</a>
                    <a href="#" class="text-white me-2">Twitter</a>
                    <a href="#" class="text-white">Instagram</a>
                </div>
            </div>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>