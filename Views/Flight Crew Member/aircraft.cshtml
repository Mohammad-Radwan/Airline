<div class="container py-4">
  <h1 class="mb-4">Aircraft Status Report</h1>

  <div class="card mb-4">
    <div class="card-body">
      <form>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Aircraft Registration</label>
            <select class="form-select" required>
              <option value="">Select Aircraft</option>
              <option>SK-787A (Boeing 787-9)</option>
              <option>SK-350B (Airbus A350-900)</option>
            </select>
          </div>
          <div class="col-md-6">
            <label class="form-label">Inspection Date</label>
            <input type="date" class="form-control" required>
          </div>
        </div>

        <div class="mb-4">
          <h5>Component Status</h5>
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th>Component</th>
                <th>Status</th>
                <th>Last Maintenance</th>
                <th>Next Due</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td>Engines</td>
                <td>
                  <select class="form-select">
                    <option>Operational</option>
                    <option>Needs Inspection</option>
                    <option>Maintenance Required</option>
                  </select>
                </td>
                <td><input type="date" class="form-control"></td>
                <td><input type="date" class="form-control"></td>
              </tr>
              <tr>
                <td>Landing Gear</td>
                <td>
                  <select class="form-select">
                    <option>Operational</option>
                    <option>Needs Inspection</option>
                    <option>Maintenance Required</option>
                  </select>
                </td>
                <td><input type="date" class="form-control"></td>
                <td><input type="date" class="form-control"></td>
              </tr>
              <tr>
                <td>Navigation Systems</td>
                <td>
                  <select class="form-select">
                    <option>Operational</option>
                    <option>Needs Inspection</option>
                    <option>Maintenance Required</option>
                  </select>
                </td>
                <td><input type="date" class="form-control"></td>
                <td><input type="date" class="form-control"></td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Additional Notes</label>
          <textarea class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit Report</button>
      </form>
    </div>
  </div>
</div>

