<div class="container py-4">
    <h1 class="mb-4">Seat Selection</h1>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Flight Details</h5>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Flight Number</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Booking Reference</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Retrieve Booking</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Seat Map</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered text-center">
                            <thead>
                            <tr>
                                <th></th>
                                <th>A</th>
                                <th>B</th>
                                <th>C</th>
                                <th class="text-center">Aisle</th>
                                <th>D</th>
                                <th>E</th>
                                <th>F</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th>1</th>
                                <td><button class="btn btn-outline-primary btn-sm">1A</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">1B</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">1C</button></td>
                                <td></td>
                                <td><button class="btn btn-outline-primary btn-sm">1D</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">1E</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">1F</button></td>
                            </tr>
                            <tr>
                                <th>2</th>
                                <td><button class="btn btn-outline-primary btn-sm">2A</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">2B</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">2C</button></td>
                                <td></td>
                                <td><button class="btn btn-outline-primary btn-sm">2D</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">2E</button></td>
                                <td><button class="btn btn-outline-primary btn-sm">2F</button></td>
                            </tr>
                            <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <h6>Legend</h6>
                        <div class="d-flex gap-3">
                            <div>
                                <button class="btn btn-outline-primary btn-sm" disabled>Available</button>
                            </div>
                            <div>
                                <button class="btn btn-primary btn-sm" disabled>Selected</button>
                            </div>
                            <div>
                                <button class="btn btn-secondary btn-sm" disabled>Occupied</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

