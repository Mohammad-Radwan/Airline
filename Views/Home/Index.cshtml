@page
@* @model IndexModel *@
@{ViewBag.Title = "Home";}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkyWay Airlines</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Airline.styles.css" asp-append-version="true"/>

</head>
<body>
    <div class="hero-section text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Welcome to SkyWay Airlines</h1>
            <p class="lead">Discover the world with comfort and style</p>
            <a href="#" class="btn btn-light btn-lg">Book Now</a>
        </div>
    </div>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Special Offers</h5>
                        <p class="card-text">Explore our latest deals and promotional offers for your next journey.</p>
                        <a href="#" class="btn btn-primary">View Offers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Flight Schedule</h5>
                        <p class="card-text">Check our comprehensive flight schedule and plan your trip.</p>
                        <a href="#" class="btn btn-primary">View Schedule</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Travel Guide</h5>
                        <p class="card-text">Get helpful tips and information for your travel destinations.</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
</body>
</html>