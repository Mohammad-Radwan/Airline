@page
@* @model MonitorIncdModel *@
@{ViewBag.Title = "Incidents";}


<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="Amenities.css" asp-append-version="true"/>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Admin" asp-action="ScheduleFlights">
                    <i class="fas fa-plane-departure"></i> Admin Portal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class= "nav-item">
                            <a asp-controller="Admin" asp-action="ScheduleFlights" class="nav-link">Schedule Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="SeeAmenities">Oversee Amenities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="TrackCargo">Track Cargo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="MonitorIncd">Monitor Incidents</a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <a asp-controller="Home" asp-action="Login" class="nav-link">Login</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="hero-section text-center">
        <h1>Flight Incident Reports</h1>
        <p class="lead">Comprehensive Overview of Aviation Incidents</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Incident Reports Overview
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Flight Route</th>
                            <th>Location</th>
                            <th>Date</th>
                            <th>Casualties</th>
                            <th>Survivors</th>
                            <th>Cause</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i=0; i<5;i++)
                        {
                            <tr>
                                <td>SAG -> WAS</td>
                                <td>USA, California</td>
                                <td>21-4-2024 12:40AM</td>
                                <td>
                                    <span class="badge bg-danger">32</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">234</span>
                                </td>
                                <td>Pilot Health</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#incident-@i">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Details
                                    </button>
                                </td>
                            </tr>

                            <div class="modal fade" id="incident-@i" tabindex="-1">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title">Incident Details - Flight DSA -> SAF</h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <h6 class="fw-bold">Flight Information</h6>
                                                    <p> SAF -> WAS</p>
                                                    <p><strong>Location:</strong> USA, California</p>
                                                    <p><strong>Date & Time:</strong> 21-4-2024 12:43 AM</p>
                                                </div>
                                                <div class="col-md-6">
                                                    <h6 class="fw-bold">Casualty Information</h6>
                                                    <div class="d-flex gap-3">
                                                        <div class="text-center">
                                                            <div class="badge bg-danger p-2 mb-2">43</div>
                                                            <p class="small mb-0">Casualties</p>
                                                        </div>
                                                        <div class="text-center">
                                                            <div class="badge bg-success p-2 mb-2">200</div>
                                                            <p class="small mb-0">Survivors</p>
                                                        </div>
                                                        <div class="text-center">
                                                            <div class="badge bg-info p-2 mb-2">
                                                                300
                                                            </div>
                                                            <p class="small mb-0">Total</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <h6 class="fw-bold">Incident Cause</h6>
                                            <p>engines</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Incident Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            Total Incidents
                            <span class="badge bg-primary rounded-pill">5</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            Total Casualties
                            <span class="badge bg-danger rounded-pill">80</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            Total Survivors
                            <span class="badge bg-success rounded-pill">600</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            Survival Rate
                            <span class="badge bg-info rounded-pill">83%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-event me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        @for (int i=0;i<5;i++)
                        {
                            <div class="timeline-item">
                                <div class="timeline-date">4 21</div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">WQT â†’ HDA</h6>
                                    <p class="small text-muted mb-0">USA, California</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
