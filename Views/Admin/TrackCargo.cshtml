@page
@* @model TrackCargoModel *@
@{ViewBag.Title = "Cargo Tracking";}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="Amenities.css" asp-append-version="true"/>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Admin" asp-action="ScheduleFlights">
                    <i class="fas fa-plane-departure"></i> Admin Portal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class= "nav-item">
                            <a asp-controller="Admin" asp-action="ScheduleFlights" class="nav-link">Schedule Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="SeeAmenities">Oversee Amenities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="TrackCargo">Track Cargo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="MonitorIncd">Monitor Incidents</a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <a asp-controller="Home" asp-action="Login" class="nav-link">Login</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="hero-section text-center">
        <h1>Cargo Management</h1>
        <p class="lead">Track and Monitor Cargo Status</p>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-box-seam me-2"></i>
                Cargo Status Overview
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Cargo ID</th>
                            <th>Aircraft Model</th>
                            <th>Cargo Capacity</th>
                            <th>Aircraft Capacity</th>
                            <th> Utilization </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i=0;i<5;i++)
                        {
                            <tr>
                                <td>CG00"@i"</td>
                                <td>AC00"@i"</td>
                                <td>23 ton</td>
                                <td>300 ton</td>
                                <td>12.45 %</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Capacity Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            Total Cargo Units
                            <span class="badge bg-primary rounded-pill">56</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            Average Utilization
                            <span class="badge bg-primary rounded-pill">
                                56.3 %
                            </span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            High Capacity Alerts
                            <span class="badge bg-danger rounded-pill">
                               12
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Status Legend
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="bg-danger text-white px-3 py-1 rounded me-2">Critical</div>
                            <span>≥ 90% capacity utilization</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <div class="bg-warning px-3 py-1 rounded me-2">Warning</div>
                            <span>≥ 75% capacity utilization</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white px-3 py-1 rounded me-2">Normal</div>
                            <span>< 75% capacity utilization</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>