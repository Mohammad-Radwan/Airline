@model IEnumerable<Airline.Models.SearchViewModelel>
@{
ViewData["Title"] = "Flight Search Results";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Available Flights</h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                    <tr>
                        <th>Flight Number</th>
                        <th>Route</th>
                        <th>Aircraft</th>
                        <th>Departure</th>
                        <th>Duration</th>
                        <th>Base Price</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var result in Model)
                    {
                        <tr>
                            <td>@result.flight.fid</td>
                            <td>@result.route.start_airport - @result.route.end_airport</td>
                            <td>@result.flight.aircraft_id</td>
                            <td>@result.flight.depart_time.ToString("HH:mm")</td>
                            <td>@result.flight.duration.ToString(@"hh\:mm")</td>
                            <td>$@result.route.base_price.ToString("N2")</td>
                            <td>
                                <a href="@Url.Action("Book", "Flight", new { searchResult = result})"
                                   class="btn btn-primary btn-sm">
                                    Book Now
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
